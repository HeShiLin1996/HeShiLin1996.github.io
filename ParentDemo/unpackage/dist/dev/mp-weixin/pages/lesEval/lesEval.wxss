
.top{
	width: 100%;
	height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.top>view{
	display: inline-block;
}
.btn{
	width: 70rpx;
	height: 50rpx;
	border: 2rpx solid #F2F2F2;
	border-radius: 23rpx;
	margin-top: 15rpx;
	line-height: 50rpx;
	text-align: center;
}
.btn image{
	width: 33rpx;
	height: 21rpx;
	left: 50%;
	top: 50%;
	-webkit-transform: translateX(-50%) translateY(-50%);
	    -ms-transform: translateX(-50%) translateY(-50%);
	        transform: translateX(-50%) translateY(-50%);
}
.time{
	width: 200rpx;
	height: 50rpx;
	margin-top: 15rpx;
	line-height: 50rpx;
	text-align: center;
	border: 2rpx solid #F2F2F2;
	border-radius: 23rpx;
}
.title1 {
	width: 100%;
	height: 100rpx;
	background-color: #FFFFFF;
}
.title1>image {
	width: 40rpx;
	height: 39rpx;
	margin-top: 25rpx;
	margin-left: 30rpx;
}
.title1>text {
	font-family: HiraginoSansGB-W3;
	font-size: 36rpx;
	color: #282828;
	margin-top: 27rpx;
	margin-left: 25rpx;
}
.les_top {
	width: 100%;
	height: 80rpx;
	background-color: #ffffff;
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.les_center {
	width: 100%;
	height: 245rpx;
	background-color: #ffffff;
	margin-bottom: 5px;
}
.les_c {
	height: 245rpx;
	margin-left: 40rpx;
	margin-right: 35rpx;
	position: relative;
}
.les_c>view{
	height: 50rpx;
	line-height: 40rpx;
}
text {
	display: inline-block;
}
.date{
	font-size: 26rpx;
	color: #8a8a8a;
	position: absolute;
	top: 41rpx;
	right: 0;
}
.img1 {
	width: 43rpx;
	height: 43rpx;
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.txt3 {
	font-size: 26rpx;
	color: #292828;
	position: absolute;
	top: 110rpx;
	left: 60rpx;
}
.img2 {
	width: 48rpx;
	height: 48rpx;
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.les_c>.txt4 {
	font-size: 26rpx;
	position: absolute;
	bottom: 75rpx;
	right: 0;
}
.txt5 {
	color: #292828;
