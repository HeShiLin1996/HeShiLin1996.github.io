
.ll{
	height: 88rpx;
	line-height: 88rpx;
	width: calc(100% - 20rpx);
	margin-left: 20rpx;
	border-bottom: 2rpx solid #F2F2F2;
}
.top{
	height: 70rpx;
	line-height: 70rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 2rpx solid #F2F2F2;
	width: 100%;
}
.top image{
	width: 34rpx;
	height: 34rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	left: 20rpx;
}
.lists{
	width: 92%;
	margin-left: 4%;
	margin-top: 20rpx;
	border-radius: 2rpx;
}

