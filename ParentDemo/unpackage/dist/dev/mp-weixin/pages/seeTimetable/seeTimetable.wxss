
.focu{
	background: #1f88f5;
	color: #FFFFFF !important;
}
.mask{
	width: 10rpx;
	height: 10rpx;
	border-radius: 50%;
	background: #49c8e8;
	left: calc(50% - 5rpx);
	top: 60rpx;
}
.bo{
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 1rpx solid #F2F2F2;
}
.focutime {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	    -ms-flex-align: end;
	        align-items: flex-end;
	z-index: 999;
}
.focutime>view {
	width: 100%;
}
.ftcon {
	width: 100%;
	height: 560rpx;
}
picker-view {
	width: 100%;
	height: 560rpx;
}
picker-view view {
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.fttop {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #f2f2f2;
	z-index: 999999;
}
.ftbtn {
	right: 30rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.ll{
	height: 400rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 20rpx 0;
	margin-top: 20rpx;
}
.ll>view{
	height: 60rpx;
	line-height: 60rpx;
}
.ll image{
	top:50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.list{
	width: 90%;
	margin-left: 5%;
	margin-bottom: 50rpx;
}
.content{
	width: 90%;
	margin-left: 5%;
}
.week>view{
	width: calc(100% / 7);
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.weeks {
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.weeks>view{
	width: calc(100% / 7);
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.top{
	margin-top: 20rpx;
	width: 100%;
	height: 80rpx;
}
.up{
	margin-top: 15rpx;
	width: 120rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border: 2rpx solid #F2F2F2;
	border-radius: 23rpx;
}
.up:hover{
	border: none;
	background: #dbdbdb;
	color: #292828;
}
.month{
	margin-top: 15rpx;
	width: 220rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border: 2rpx solid #F2F2F2;
	border-radius: 23rpx;
}

