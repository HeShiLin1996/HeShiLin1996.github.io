.focutime {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	    -ms-flex-align: end;
	        align-items: flex-end;
	z-index: 999;
}
.focutime>view {
	width: 100%;
}
.ftcon {
	height: 560rpx;
}
picker-view {
	width: 100%;
	height: 560rpx;
}
picker-view view {
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
}
.fttop {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #f2f2f2;
	z-index: 999999;
}
.ftbtn {
	right: 30rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.ftdata {
	margin-left: 30rpx;
	display: inline-block;
}
.ftdata1 {
	width: 200rpx;
}
.ftdata2 {
	width: 65rpx;
}
.border {
	border-bottom: 4rpx solid #282828;
}

